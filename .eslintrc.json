{
  "env": {
    "browser": true,
    "jasmine": true,
    "node": true,
    "webextensions": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["warn", "error", "debug"]
      }
    ],
    "no-unused-vars": "warn",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": false
      }
    ]
  },
  "globals": {
    "__html__": true
  },
  "plugins": [
    "json"
  ]
}
