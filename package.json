{
  "name": "autoscrolling",
  "version": "1.0.0",
  "description": "Browser extension for Firefox",
  "main": "background.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "npm run build:gulp && npm run start:webpack",
    "start:webpack": "webpack -w --debug --env.DEBUG=true",
    "start:gulp": "gulp watch",
    "build": "npm run build:firefox",
    "build:main": "npm run build:gulp && npm run build:webpack -- --mode=production",
    "build:webpack": "webpack",
    "build:gulp": "gulp",
    "build:firefox": "npm run manifest:firefox && npm run build:main",
    "build:chrome": "npm run manifest:chrome && npm run build:main",
    "manifest:firefox": "cd addon && cp firefox-manifest.json manifest.json",
    "manifest:chrome": "cd addon && cp chrome-manifest.json manifest.json",
    "debug": "npm run manifest:firefox && cd addon && web-ext run",
    "test": "npm run build:gulp && karma start",
    "test:debug": "npm run build:gulp && karma start --no-single-run --auto-watch",
    "lint": "eslint src tests",
    "lint:ext": "cd addon && web-ext lint",
    "pack": "npm run build && npm run lint:ext && cd addon && web-ext build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write src/**/*.js",
      "eslint src --fix",
      "git add"
    ],
    "src/**/*.json": [
      "prettier --write src/**/*.json",
      "git add"
    ],
    "tests/**/*.js": [
      "prettier --write tests/**/*.js",
      "eslint tets --fix",
      "git add"
    ],
    "gulpfile.babel.js": [
      "prettier --write gulpfile.babel.js",
      "npm run lint -- --fix",
      "git add"
    ],
    "webpack.config.js": [
      "prettier --write webpack.config.js",
      "npm run lint -- --fix",
      "git add"
    ],
    "addon/*.json": [
      "prettier --write addon/*.json",
      "git add"
    ],
    "package.json": [
      "prettier --write package.json",
      "git add"
    ],
    ".eslintrc.json": [
      "prettier --write .eslintrc.json",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pinkienort/AutoScrolling.git"
  },
  "keywords": [
    "webextension"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pinkienort/AutoScrolling/issues"
  },
  "homepage": "https://github.com/pinkienort/AutoScrolling#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.6.0",
    "gulp": "^4.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-ejs": "^3.2.0",
    "gulp-sass": "^4.0.1",
    "html-loader": "^0.5.1",
    "husky": "^1.0.0-rc.13",
    "jasmine": "^3.2.0",
    "json-loader": "^0.5.7",
    "karma": "^3.1.1",
    "karma-firefox-launcher": "^1.1.0",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-jasmine": "^1.1.2",
    "karma-webpack": "^3.0.5",
    "lint-staged": "^8.0.0",
    "prettier": "1.14.3",
    "sinon-chrome": "^2.3.2",
    "spectre.css": "^0.5.3",
    "web-ext": "^2.9.1",
    "webextension-polyfill": "^0.3.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.0"
  }
}
