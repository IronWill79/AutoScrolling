{
  "html": {
    "wrapper": {
      "id": "wrapper-auto-scrolling"
    },
    "modal": {
      "id": "modal-auto-scrolling",
      "closeAttribute": "data-close-modal-auto-scrolling"
    },
    "transmissionWrapper": {
      "id": "transmission-wrapper-auto-scrolling"
    },
    "speedWrapper": {
      "id": "speed-wrapper-auto-scrolling"
    }
  },

  "options": {
    "stopScrollingByClick": {
      "id": "stop-scrolling-by-click",
      "value": false
    },
    "stopScrollingOnHover": {
      "id": "stop-scrolling-by-click-on-hover",
      "value": false
    },
    "scrollingSpeed": {
      "id": "scrolling-speed",
      "value": 20
    },
    "keybindSingleClick": {
      "id": "keybind-single-click",
      "value": "Alt+Shift+PageDown",
      "commandName": "single-click-action"
    },
    "stopScrollingOnFocusOut": {
      "id": "stop-scrolling-on-focus-out",
      "value": false
    },
    "disableDoubleClick": {
      "id": "disable-double-click",
      "value": false
    },
    "restoreScrollingFromSwitchBack": {
      "id": "restore-scrolling-from-switch-back",
      "value": false
    },
    "enableTransmissionScrolling": {
      "id": "enable-transmission-scrolling",
      "value": false
    },
    "transmissionGearOfFast": {
      "id": "transmission-gear-of-fast",
      "value": 2000
    },
    "transmissionGearOfMiddle": {
      "id": "transmission-gear-of-middle",
      "value": 500
    },
    "transmissionGearOfSlow": {
      "id": "transmission-gear-of-slow",
      "value": 20
    },
    "stopWhenBottomOfWindow": {
      "id": "stop-when-bottom-of-window",
      "value": true
    }
  },

  "scrolling": {
    "maxSpeed": 3000,
    "minSpeed": 1,
    "thresholdStep": 5
  },

  "browserAction": {
    "stopOrClose": {
      "title": "Start scrolling / Open modal window",
      "path": {
        "16": "../icons/mouse-16.png",
        "32": "../icons/mouse-32.png",
        "48": "../icons/mouse-48.png"
      }
    },
    "scrolling": {
      "title": "Stop scrolling",
      "path": {
        "16": "../icons/scrolling-mouse-16.png",
        "32": "../icons/scrolling-mouse-32.png",
        "48": "../icons/scrolling-mouse-48.png"
      }
    },
    "modalOpened": {
      "title": "Close modal window",
      "path": {
        "16": "../icons/mouse-16.png",
        "32": "../icons/mouse-32.png",
        "48": "../icons/mouse-48.png"
      }
    },
    "accelerateScrolling": {
      "title": "Accelerate scrolling",
      "path": {
        "16": "../icons/scrolling-mouse-16.png",
        "32": "../icons/scrolling-mouse-32.png",
        "48": "../icons/scrolling-mouse-48.png"
      }
    }
  },

  "contextMenus": [
    {
      "id": "action-menu",
      "title": "Start scrolling",
      "contexts": ["all"]
    }
  ]
}
