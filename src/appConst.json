{
  "html": {
    "wrapper": {
      "id": "wrapper-auto-scrolling"
    },
    "modal": {
      "id": "modal-auto-scrolling",
      "closeAttribute": "data-close-modal-auto-scrolling"
    }
  },

  "options": {
    "stopScrollingByClick": {
      "id": "stop-scrolling-by-click",
      "value": false
    },
    "stopScrollingOnHover": {
      "id": "stop-scrolling-by-click-on-hover",
      "value": false
    },
    "scrollingSpeed": {
      "id": "scrolling-speed",
      "value": 20
    },
    "keybindSingleClick": {
      "id": "keybind-single-click",
      "value": "Alt+Shift+PageDown",
      "commandName": "single-click-action"
    },
    "stopScrollingOnFocusOut": {
      "id": "stop-scrolling-on-focus-out",
      "value": false
    },
    "disableDoubleClick": {
      "id": "disable-double-click",
      "value": false
    }
  },

  "scrolling": {
    "maxSpeed": 3000,
    "minSpeed": 1,
    "thresholdStep": 5
  },

  "browserAction": {
    "stopOrClose": {
      "title": "Start scrolling / Open modal window",
      "badgeText": "",
      "path": {
        "16": "../icons/mouse-16.png",
        "32": "../icons/mouse-32.png",
        "32": "../icons/mouse-48.png"
      }
    },
    "scrolling": {
      "title": "Stop scrolling",
      "badgeText": "Scroll",
      "path": {
        "16": "../icons/scrolling-mouse-16.png",
        "32": "../icons/scrolling-mouse-32.png",
        "32": "../icons/scrolling-mouse-48.png"
      }
    },
    "modalOpened": {
      "title": "Close modal window",
      "badgeText": "Modal",
      "path": {
        "16": "../icons/mouse-16.png",
        "32": "../icons/mouse-32.png",
        "32": "../icons/mouse-48.png"
      }
    }
  },

  "contextMenus": [
    {
      "id": "switch-scrolling",
      "title": "Start scrolling",
      "icons": {
        "16": "icons/mouse-16.png",
        "32": "icons/mouse-32.png"
      },
      "contexts": ["all"]
    }
  ]
}
