{
  "manifest_version": 2,
  "name": "AutoScrolling",
  "version": "1.1.1",

  "description": "Auto-scroll in any web pages",

  "icons": {
    "48": "icons/mouse-48.png",
    "96": "icons/mouse-96.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "button/mouse-19.png",
      "38": "button/mouse-38.png"
    },
    "default_title": "Enable/Disable auto scroll"
  },

  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "content.js" ]
    }
  ],

  "background": {
    "scripts": [ "background.js" ]
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": [ "storage" ]
}
